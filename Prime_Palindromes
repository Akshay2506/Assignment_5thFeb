// Prime Palindromes under 50
for(let j=2;j<=50;j++)
{
let flag=0;
for(let i=2;i<=parseInt(j/2);i++)
{
    if(j%i===0)
    {
    flag++;
    }
}
if(flag===0)  // if number prime then going forward to check whether it is a palindrome or not
{
    let rev='';
    let a=j;
    while(a!==0)
    {
        let c=a%10;
        rev+=c;
        a=parseInt(a/10);
    }
    let b=parseInt(rev)
    if(j===b)
    console.log(`${j} is a prime palindrome`);
}
}
